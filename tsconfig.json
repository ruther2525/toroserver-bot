{
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "/*": [
        "./*"
      ],
    },
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./build",
    
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
